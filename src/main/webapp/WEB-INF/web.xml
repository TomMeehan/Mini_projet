<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>servlet.DatabaseInitializer</listener-class>
    </listener>
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>servlet.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productsInJSON</servlet-name>
        <servlet-class>servlet.ProductsInJSON</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sessionController</servlet-name>
        <servlet-class>servlet.SessionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sessionListener</servlet-name>
        <servlet-class>servlet.SessionListener</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>headerServlet</servlet-name>
        <servlet-class>servlet.HeaderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>produits</servlet-name>
        <servlet-class>servlet.Produits</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>categoriesInJSON</servlet-name>
        <servlet-class>servlet.CategoriesInJSON</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlet.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productsInJSON</servlet-name>
        <url-pattern>/productsInJSON</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sessionController</servlet-name>
        <url-pattern>/sessionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sessionListener</servlet-name>
        <url-pattern>/sessionListener</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>headerServlet</servlet-name>
        <url-pattern>/headerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>produits</servlet-name>
        <url-pattern>/produits</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>categoriesInJSON</servlet-name>
        <url-pattern>/categoriesInJSON</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
</web-app>

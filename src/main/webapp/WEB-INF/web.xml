    <servlet>
        <servlet-name>profil</servlet-name>
        <servlet-class>servlet.Profil</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sessionInJSON</servlet-name>
        <servlet-class>servlet.SessionInJSON</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>clientInJSON</servlet-name>
        <servlet-class>servlet.ClientInJSON</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>toEditProfile</servlet-name>
        <servlet-class>servlet.ToEditProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateClient</servlet-name>
        <servlet-class>servlet.UpdateClient</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productsInJSON</servlet-name>
        <url-pattern>/productsInJSON</url-pattern>

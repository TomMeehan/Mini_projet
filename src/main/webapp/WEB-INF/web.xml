        <servlet-class>listeners.SessionListener</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>headerServlet</servlet-name>
        <servlet-class>servlet.HeaderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>produits</servlet-name>
        <servlet-class>servlet.Produits</servlet-class>
    </servlet>
    <servlet>
